NAME	= libftprintf.a

SRCS	=	ft_printf.c															\
			ft_printfutils.c													\
			ft_printfutils2.c													\
			ft_printfutils3.c													\
			ft_printfutils4.c													\

BONUSSRCS	= 

OBJS	= ${SRCS:.c=.o}

BONUSOBJS	= ${BONUSSRCS:.c=.o}

CC		= gcc

CFLAGS	= -Wall -Wextra -Werror

RM		= rm -rf

.c.o:
		${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

${NAME}:	${OBJS}
	ar rc ${NAME} ${OBJS}
	ranlib ${NAME}

all:	${NAME}

bonus:	all ${BONUSOBJS}
	ar rc ${NAME} ${BONUSOBJS}
	ranlib ${NAME}

clean:
	 ${RM} ${OBJS} ${BONUSOBJS}

fclean:	clean
	${RM} ${NAME}

re:		fclean all

coffee:
	@clear
